{
  "name": "@grucloud/core",
  "version": "0.2.0",
  "description": "Infrastructure as Code",
  "public": true,
  "main": "src/index.js",
  "bin": {
    "gc": "./src/cli.js"
  },
  "scripts": {
    "start": "NODE_PATH=src nodemon -e ts,js,graphql node src/index.js",
    "test": "NODE_PATH=src mocha 'src/**/*.js'",
    "test:ci": "NODE_PATH=src nyc mocha 'src/**/*.js'",
    "cpd": "jscpd -r console --format 'javascript,typescript' ./src"
  },
  "keywords": [
    "cloud"
  ],
  "author": "Frederic Heem",
  "license": "ISC",
  "devDependencies": {
    "jscpd": "^3.1.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1"
  },
  "dependencies": {
    "@koa/router": "^9.0.0",
    "axios": "^0.19.2",
    "bluebird": "^3.7.2",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "lodash": "^4.17.15",
    "shortid": "^2.2.15",
    "url-join": "^4.0.1",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FredericHeem/grucloud"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js",
      "src/**/*test*.js",
      "src/**/test/*.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
