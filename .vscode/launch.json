{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Cli plan Query",
      "program": "${workspaceFolder}/src/cli/cliEntry.js",
      "cwd": "${workspaceFolder}",
      "args": ["--infra", "src/providers/mock/test/MockStack.js", "plan"]
    },
    {
      "name": "Debug test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors",
        "--config",
        "${workspaceRoot}/.mocharc.json",
        "'src/**/*.test.js'"
      ],
      "cwd": "${workspaceRoot}/",
      "runtimeExecutable": null,
      "env": {
        "NODE_PATH": "src"
      }
    }
  ]
}
